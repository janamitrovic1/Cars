generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Korisnik{
  id String @id @default(uuid())
  ime String
  prezime String
  username String @unique
  email String @unique
  BrTelefona String
  password String
}

model Proizvod{
  id String @id @default(uuid())
  ime String
  slika String                      // cuvace se kao URL
  kategorija String
  cena Float
  model String
  boja String
  brVrata Int @default(4)
  description String?
}